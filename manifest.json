{
  "manifest_version": 3,
  "name": "CompSci Class Scraper",
  "description": "A Chrome extension to scrape computer science classes from bannerweb.emich.edu",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "storage"],
  "host_permissions": ["https://bannerweb.emich.edu/*"],
  "background": {
    "service_worker": "src/background.ts"
  }
}
